<!DOCTYPE html>
<html>
	<head>
		<meta charset=utf-8>
		<title>Three.js app</title>
		<style>
			body { margin: 0; }
			canvas { width: 100%; height: 100% }
		</style>
	</head>
	<body>




		<script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r79/three.min.js"></script>
		<script>
			var scene = new THREE.Scene(); //creates the scene
			var camera = new THREE.PerspectiveCamera( 75, window.innerWidth/window.innerHeight, 0.1, 1000 ); //defines camera dimensions

			var renderer = new THREE.WebGLRenderer(); //create the renderer
			renderer.setSize( window.innerWidth, window.innerHeight );//set size of the renderer
			renderer.setClearColor(0x000000)
			document.body.appendChild( renderer.domElement );


			var geometry = new THREE.BoxGeometry( 1, 1, 1);//defines size proportion of the var geometry
			var material = new THREE.MeshLambertMaterial( { color: 0x00FFFF } );//define mesh color

			var edges = new THREE.EdgesGeometry( geometry );
			var line = new THREE.LineSegments( edges, new THREE.LineBasicMaterial( { color: 0x00000 } ) );
			scene.add( line );


			var cube = new THREE.Mesh( geometry, material);//define cube using previous geometry and mesh variables
			scene.add( cube );//adds in cube variable to the scence

			camera.position.z = 5;//define camera position

			var light = new THREE.AmbientLight(0x404040,1);
			var plight = new THREE.PointLight( 0x404040, 1, 100 );
			plight.position.set( 0, 0, 1 );

			scene.add( plight );
			scene.add(light);

			var animate = function () {					//defining the function that will animate the cube
				requestAnimationFrame( animate );

				cube.rotation.x += 0.01;
				line.rotation.x += 0.01;	

				cube.rotation.y += 0.01;
				line.rotation.y += 0.01;

				cube.rotation.z += 0.01;
				line.rotation.z += 0.01;


				renderer.render( scene, camera );//renders the scene
			};

			animate();			//calling the animate function to animate the cube.


		</script>





	</body>
</html>
